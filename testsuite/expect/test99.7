        "srun: error: unrecognized filesystem device \"test\"" {
                incr matches
        }
        timeout {
                log_error "srun not responding"
                slow_kill $srun_pid1
                incr exit_code
        }
        eof {
                wait
        }
}
if {$matches != 1} {
        send_user "$matches FAILURE: invalid filesystem device; (A1) srun didn't fail.\n"
        end_it 1
}
if {$matches == 1} {
        send_user "\nSUCCESS\n"
}

